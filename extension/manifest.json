{
  "manifest_version": 3,
  "name": "EcomSniper Clone - MVP",
  "version": "1.0.0",
  "description": "Scrape Amazon product and list to eBay via your server",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.de/*",
    "https://*.amazon.*",
    "https://ecomsniper-clone.onrender.com/*",
    "https://meine-app.eu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "EcomSniper"
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*", "https://*.amazon.de/*", "https://*.amazon.*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
