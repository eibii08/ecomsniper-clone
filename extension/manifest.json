{
  "manifest_version": 3,
  "name": "EcomSniper Clone",
  "description": "Schnelles Listing von Amazon-Produkten auf eBay",
  "version": "1.0.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.amazon.de/*", "*://www.amazon.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ]
}
